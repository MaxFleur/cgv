#version 150

in vec2 position;
in vec4 color;
//in vec2 texture_position;
in vec2 texcoord;

uniform ivec2 resolution;

out vec4 col;
out vec2 uv;
//out vec2 transformed_texture_pos;

void main() {
	
	col = color;
	uv = texcoord;

	// transform to window space
	vec2 pos = (2.0*position) / resolution;
	pos -= 1.0;

	//transformed_texture_pos = ((2.0*texture_position) / resolution) - 1.0;

	gl_Position = vec4(pos, 0.0, 1.0);
}
